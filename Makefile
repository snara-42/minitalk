sname = server
ssrcs = server.c util.c
sobjs = $(ssrcs:.c=.o)

cname = client
csrcs = client.c util.c
cobjs = $(csrcs:.c=.o)

deps =  $(csrcs:.c=.d) $(ssrcs:.c=.d)

CC = gcc
CFLAGS = -Wall -Wextra -Werror 
ifeq ($(MAKECMDGOALS),debug)
CFLAGS += -fsanitize=address
endif

.c.o:
	${CC} ${CFLAGS} -MMD -MP -MF $(<:.c=.d) -c $<

all:	$(sname) $(cname)
$(sname):	$(sobjs)
		$(CC) ${CFLAGS} $^ -o $@
$(cname):	$(cobjs)
		$(CC) ${CFLAGS} $^ -o $@

-include $(deps)
bonus:
		make WITHBONUS=1 all

debug:	all

clean:
		rm -f $(sobjs) $(cobjs) $(deps)

fclean:	clean
		rm -f a.out $(sname) $(cname)

re: fclean all


